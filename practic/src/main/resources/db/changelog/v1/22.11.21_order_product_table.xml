<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="user_1" author="emiks">
        <createTable tableName="order_product">
            <column name="id" type="bigserial" autoIncrement="true" >
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_order_product_id" />
            </column>
            <column name="order_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_order" references="order(id)" />
            </column>
            <column name="product_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_product" references="product(id)" />
            </column>
            <column name="amount_in_order" type="int">
                <constraints nullable="false" unique="false" />
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
