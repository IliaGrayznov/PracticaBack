<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="user_1" author="emiks">
        <createTable tableName="order_status">
            <column name="id" type="bigserial" autoIncrement="true" >
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_order_status_id" />
            </column>
            <column name="name" type="varchar(100)">
                <constraints nullable="false" unique="true" />
            </column>
        </createTable>
    </changeSet>

    <!--status-->
    <changeSet id="user_2" author="emiks">
        <insert tableName="order_status">
            <column name="name">cart</column>
        </insert>
        <insert tableName="order_status">
            <column name="name">ordered</column>
        </insert>
        <insert tableName="order_status">
            <column name="name">confirmed</column>
        </insert>
        <insert tableName="order_status">
            <column name="name">close</column>
        </insert>
    </changeSet>


</databaseChangeLog>
