<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="user_1" author="emiks">
        <createTable tableName="order">
            <column name="id" type="bigserial" autoIncrement="true" >
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_order_id" />
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_user" references="user(id)" />
            </column>
            <column name="status_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_order_status" references="order_status(id)" />
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
