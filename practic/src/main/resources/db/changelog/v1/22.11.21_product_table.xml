<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="user_1" author="emiks">
        <createTable tableName="product">
            <column name="id" type="bigserial" autoIncrement="true" >
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_product_id" />
            </column>
            <column name="name" type="varchar(300)">
                <constraints nullable="false" unique="true" />
            </column>
            <column name="description" type="TEXT">
            </column>
            <column name="img" type="varchar(300)">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="price" type="int">
                <constraints nullable="false" unique="false" />
            </column>
            <column name="amount_in_warehouse" type="int">
                <constraints nullable="false" unique="false" />
            </column>
            <column name="category_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_product_category_id" references="product_category(id)"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
