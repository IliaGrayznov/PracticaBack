<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="news_1" author="d30">
        <createTable tableName="currentnews">
            <column name="id" type="bigserial" autoIncrement="true" >
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_curr_news_id" />
            </column>
            <column name="cat_id" type="bigserial">
                <constraints nullable="false" />
            </column>
            <column name="news_id" type="bigserial">
                <constraints nullable="false"  />
            </column>
            <column name="author_id" type="bigserial">
                <constraints nullable="false"  />
            </column>
            <column name="hot" type="boolean">
                <constraints nullable="false"  />
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>